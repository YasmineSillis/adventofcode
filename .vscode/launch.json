
{
	"version": "0.2.0",
	"configurations": [

		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"args": ["${file}"],
			"runtimeArgs": [ "-r", "ts-node/register"],
			"cwd": "${workspaceRoot}/typescript",
			"sourceMaps": false,			
		},
		{
			"name": "Node Inspector",
			"type": "node",
			"request": "launch",
			"args": ["${file}"],
			"runtimeArgs": ["--nolazy","-r", "ts-node/register"],
			"cwd": "${workspaceRoot}/typescript",
			"protocol": "inspector",
			"internalConsoleOptions": "openOnSessionStart",
			"env": {
				"TS_NODE_IGNORE": "false"
			}
		}
	]
}